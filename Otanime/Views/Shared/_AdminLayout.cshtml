<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Administration - Otanime</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="flex flex-col min-h-screen bg-gray-50">
<header>
    <partial name="_Navigation" />
</header>

<div class="flex-grow container px-4 py-6 mx-auto">
    <div class="grid grid-cols-12 gap-6">
        <!-- Sidebar -->
        <div class="col-span-12 md:col-span-3">
            <div class="p-4 bg-white rounded-lg shadow-sm">
                <nav class="space-y-2">
                    <a asp-controller="Admin" asp-action="Products"
                       class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Products"
                                  ? "bg-blue-50 text-blue-600"
                                  : "text-gray-700 hover:bg-gray-100")
                                  block px-4 py-2 rounded-md transition-colors">
                        Produits
                    </a>
                    <a asp-controller="Admin" asp-action="Orders"
                       class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Orders"
                                  ? "bg-blue-50 text-blue-600"
                                  : "text-gray-700 hover:bg-gray-100")
                                  block px-4 py-2 rounded-md transition-colors">
                        Commandes
                    </a>
                    <a asp-controller="Admin" asp-action="Users"
                       class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Users"
                                  ? "bg-blue-50 text-blue-600"
                                  : "text-gray-700 hover:bg-gray-100")
                                  block px-4 py-2 rounded-md transition-colors">
                        Utilisateurs
                    </a>
                </nav>
            </div>
        </div>

        <!-- Contenu principal -->
        <main class="col-span-12 md:col-span-9">
            @RenderBody()
        </main>
    </div>
</div>

<footer class="mt-auto border-t border-gray-200">
    <div class="container px-4 py-6 mx-auto">
        <div class="text-center text-gray-600">
            &copy; 2025 - Otanime Admin
        </div>
    </div>
</footer>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>