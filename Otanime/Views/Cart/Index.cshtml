@model List<dynamic>

@{
    ViewData["Title"] = "Panier";
}

<h1>Votre Panier</h1>

@if (Model.Count == 0)
{
    <p>Votre panier est vide.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Produit</th>
            <th>Prix unitaire</th>
            <th>Quantit√©</th>
            <th>Sous-total</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Product.Price</td>
                <td>@item.Quantity</td>
                <td>@((item.Quantity * item.Product.Price).ToString("C"))</td>
            </tr>
        }
        </tbody>
    </table>
    
    <div class="text-end">
        <h3>Total : </h3>
    </div>
    
    <div class="text-end">
        <a href="#" class="btn btn-primary">Passer la commande</a>
    </div>
}